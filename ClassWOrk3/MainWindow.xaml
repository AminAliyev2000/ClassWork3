<Window x:Class="ClassWOrk3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWOrk3"
        mc:Ignorable="d"
        Title="ClassWork3" Height="500" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
                
            </Grid.RowDefinitions>
            <DockPanel>
                
            <WrapPanel Background="LightBlue" Grid.Row="0" Height="50">
                <TextBox Background="White" Width="150" Height="20" Name="WrapPanelTextBox" Margin="10"></TextBox>
                <Button Height="20" Name="open_button" Click="open_button_Click"
                        Background="LightCoral"
                        Foreground="White"
                        >Open</Button>
                <Button Margin="15"
                        Background="LightCoral"
                        Foreground="White"
                        >Save</Button>
                    <ToggleButton Margin="15">
                        <CheckBox
                            IsChecked="False"
                        Background="LightCoral"
                        Foreground="White">
                            
                        AutoSave
                        </CheckBox>
                    </ToggleButton>
                    <Button Margin="15,15,0,15" Width="40" 
                        Background="LightCoral"
                        Foreground="White"
                            >Cut</Button>
                    <Button Margin="0,15,0,15"  Width="40"
                           Background="LightCoral"
                        Foreground="White"
                            >Copy</Button>
                    <Button Margin="0,15,0,15"  Width="40" 
                             Background="LightCoral"
                       Foreground="White"
                            >Paste</Button>
                    <Button Margin="0,15,0,15"  Width="60" 
                          Background="LightCoral"
                        Foreground="White"
                            >Select All</Button>
                </WrapPanel>
            </DockPanel>
            <TextBox Grid.Row="1" Background="White" Name="GridTextbox"></TextBox>
        </Grid>
        
    </Grid>
</Window>
